## Touchpad / Mouse
input "*" {
   dwt enabled
   tap enabled
   natural_scroll disabled
   middle_emulation enabled
	pointer_accel 0.6
}

input type:pointer {
	accel_profile flat
}

# Keyboard Layout
input "type:keyboard" {
   xkb_layout us,de
   xkb_variant ,nodeadkeys
   xkb_options grp:alt_shift_toggle
   repeat_delay 300
   repeat_rate 30
}
